## COUNTRY for crda wireless regulatory domain
export COUNTRY="IN"

## Terminal Color
#export TERM=xterm-256color

## EDITOR
export EDITOR=vim

## JAVA_HOME
export JAVA_HOME=/usr/lib/jvm/java-8-openjdk

## XDG Config Home Directory env variable, required by some apps
export XDG_CONFIG_HOME=$HOME/.config

## Disable GTK3 (Use GTK2) for Eclipse (SWT graphics)
export SWT_GTK3=1

## KiCAD configuration
#export KISYSMOD=/usr/share/kicad/footprints
#export KIGITHUB=$HOME/KiCAD/libraries
#export KISYS3DMOD=/usr/share/kicad/modules/packages3d

## Destination folder to git clone AUR packages
export AURDEST=/home/abs/pkgbuilds

## GTK3 Client Side Decorations
export GTK_CSD=0

## Default compression options for XZ
export XZ_OPTS="--threads=4 -9"

## PATH setting
export PATH=$PATH:$HOME/bin
